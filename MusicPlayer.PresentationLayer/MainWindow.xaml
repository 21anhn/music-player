<Window x:Class="MusicPlayer.PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="FPT Music Player" Height="700" Width="1050" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" AllowsTransparency="True"  Background="Transparent" Loaded="Window_Loaded">

    <Border Background="Black" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <!-- Navbar -->
            <Border Grid.ColumnSpan="2">
                <Grid Margin="20,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="FPT Music" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" FontSize="30" Margin="25,0,25,0"/>

                    <!-- Search Box with Icon inside -->
                    <Border Grid.Column="1" Background="White" CornerRadius="20" VerticalAlignment="Center" Margin="80,0,55,0" Height="50">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="&#xf002;" FontSize="20" FontFamily="/#Font Awesome 6 Pro Solid" Foreground="Black"  VerticalAlignment="Center" HorizontalAlignment="Center" />
                            <TextBlock x:Name="SearchTextBlock" Text="Artists, Songs" FontSize="20" Background="Transparent" Foreground="Black" VerticalAlignment="Center" Grid.Column="1" MouseDown="SearchTextBlock_MouseDown"/>
                            <TextBox x:Name="SearchTextBox" Background="Transparent" Margin="0,0,10,0" BorderBrush="Transparent" BorderThickness="0" Grid.Column="1" FontWeight="Normal" TextChanged="SearchTextBox_TextChanged"/>
                        </Grid>
                    </Border>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock x:Name="WelcomeNameTextBlock" Text="Name" FontSize="18" Foreground="White" VerticalAlignment="Center" Margin="0 10 5 10"/>
                        <Button x:Name="LogoutButton" Content="Log Out" Background="#17AE38" Width="110" Margin="10 0 0 0" Height="38" Click="LogoutButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          ContentSource="Content">
                                            <!-- Use TextBlock to customize text appearance -->
                                            <ContentPresenter.ContentTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"
                                                               Foreground="Black"
                                                               FontWeight="Bold"
                                                               FontSize="16" />
                                                </DataTemplate>
                                            </ContentPresenter.ContentTemplate>
                                        </ContentPresenter>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Menu -->
            <Border Background="#282828" CornerRadius="10" Grid.Row="1" Margin="10 0 0 0">
                <StackPanel>

                    <TextBlock Text="Your Library" Style="{StaticResource menuTitle}"/>
                    <Button x:Name="HomeButton" Width="183" Style="{StaticResource menuButton}" Background="#02be68" Foreground="White" Click="HomeButton_Click">
                        <Grid>
                            <TextBlock Text="Home" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}"/>
                        </Grid>
                    </Button>

                    <Button x:Name="PlaylistButton" Style="{StaticResource menuButton}" Click="PlaylistButton_Click">
                        <Grid>
                            <TextBlock Text="Playlist" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible"/>
                        </Grid>
                    </Button>

                    <Button x:Name="SongsButton" Style="{StaticResource menuButton}" Click="SongsButton_Click">
                        <Grid>
                            <TextBlock Text="Songs" Margin="0 0 0 2"/>
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}"/>
                        </Grid>
                    </Button>

                </StackPanel>
            </Border>

            <!-- Music Section -->
            <Border x:Name="MusicSection" Grid.Column="1" Grid.Row="1" Background="#282828" CornerRadius="10" Margin="10,0,10,0">
                <StackPanel Margin="20">
                    <TextBlock x:Name="SectionTitle" Foreground="White" Text="Home" Style="{StaticResource titleText}" Margin="20"/>
                    <ListView x:Name="MusicsListView" Visibility="Collapsed" Height="155" Width="725">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Music Id" DisplayMemberBinding="{Binding MusicId}" Width="50"/>
                                <GridViewColumn Header="Artist Name" DisplayMemberBinding="{Binding ArtistName}" Width="200"/>
                                <GridViewColumn Header="Music Name" DisplayMemberBinding="{Binding MusicName}" Width="200"/>
                                <GridViewColumn Header="Created Date" DisplayMemberBinding="{Binding CreatedDate}" Width="200"/>
                                <GridViewColumn Header="Action" Width="75">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Play" Width="50" Click="PlayButton_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- ListView for Songs -->
                    <StackPanel Visibility="Collapsed" Orientation="Horizontal" Margin="10">
                        <Button x:Name="UploadSongButton" Content="Upload Song" Width="109" Margin="10 0 10 0" Background="#0DAB09" Foreground="White" Click="UploadSongButton_Click" Height="26">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="DeleteSongButton" Content="Delete Song" Width="100" Background="#D32F2F" Foreground="White" Click="DeleteSongButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- ListView for Playlists -->
                    <StackPanel x:Name="PlaylistSection" Visibility="Visible" Margin="20">
                        <ListView x:Name="PlaylistsListView" Height="155" Width="725">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Playlist Id" DisplayMemberBinding="{Binding PlaylistId}" Width="50"/>
                                    <GridViewColumn Header="Playlist Name" DisplayMemberBinding="{Binding PlaylistName}" Width="200"/>
                                    <GridViewColumn Header="Created Date" DisplayMemberBinding="{Binding CreatedDate}" Width="200"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button x:Name="CreatePlaylistButton" Content="Create Playlist" Width="120" Background="#1E88E5" Foreground="White" Click="CreatePlaylistButton_Click" Height="26" Margin="10">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    <!-- Music Player Controls -->

                </StackPanel>
            </Border>

            <!-- Down Section -->
            <Grid Height="90" VerticalAlignment="Top" Margin="0,10,0,0" Grid.ColumnSpan="2" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock x:Name="SongNameTextBlock" Text="Tille" Foreground="White" FontSize="20" VerticalAlignment="Top" Margin="10,17,0,0" Height="28" Padding="10 0" Width="340" TextWrapping="NoWrap"/>
                    <TextBlock  x:Name="ArtistNameTextBlock" Text="Artist" Foreground="White" FontSize="14" VerticalAlignment="Top" Margin="10,45,0,0" Padding="10 0"  Width="340"/>
                </Grid>

                <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0">
                        <Grid HorizontalAlignment="Center" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>

                            <!-- Music Control Buttons -->
                            <Button BorderBrush="Transparent" Grid.Column="0" Style="{StaticResource MusicButton}">
                                <TextBlock Text="&#xf074;" FontSize="15" Foreground="White" FontFamily="/#Font Awesome 6 Pro Solid"/>
                            </Button>
                            <Button x:Name="PreviousButton" Grid.Column="1" Style="{StaticResource MusicButton}" Click="PreviousButton_Click">
                                <TextBlock Text="&#xf048;" FontSize="20" Foreground="White" FontFamily="/#Font Awesome 6 Pro Solid"/>
                            </Button>
                            <Button x:Name="PlayButton" Grid.Column="2" Visibility="Visible" Style="{StaticResource MusicButton}" Click="PlayButton_Click">
                                <TextBlock Text="&#xf144;" FontSize="40" Foreground="White" FontFamily="/#Font Awesome 6 Pro Solid"/>
                            </Button>
                            <Button x:Name="PauseButton" Grid.Column="2" Visibility="Collapsed" Style="{StaticResource MusicButton}" Click="PauseButton_Click">
                                <TextBlock Text="&#xf28b;" FontSize="40" Foreground="White" FontFamily="/#Font Awesome 6 Pro Solid"/>
                            </Button>
                            <Button x:Name="NextButton" Grid.Column="3" Style="{StaticResource MusicButton}" Click="NextButton_Click">
                                <TextBlock Text="&#xf051;" FontSize="20" Foreground="White" FontFamily="/#Font Awesome 6 Pro Solid"/>
                            </Button>
                            <Button Grid.Column="4" Style="{StaticResource MusicButton}">
                                <TextBlock Text="&#xf363;" FontSize="15" Foreground="White" FontFamily="/#Font Awesome 6 Pro Solid"/>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Slider and Time Display -->
                    <TextBlock x:Name="CurrentTimeTextBlock" Text="0:00" Foreground="White" FontSize="10" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,0,0,1"/>
                    <Slider  x:Name="PositionSlider" Grid.Row="1" Width="250" VerticalAlignment="Center" HorizontalAlignment="Center" SelectionEnd="{Binding ElementName=PositionSlider, Path=Value}" Style="{DynamicResource SliderStyle1}" IsSelectionRangeEnabled="True"   PreviewMouseDown="PositionSlider_PreviewMouseDown" ValueChanged="PositionSlider_ValueChanged"/>
                    <TextBlock x:Name="TotalTimeTextBlock" Text="0:00" Foreground="White" FontSize="10" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,30,1"/>

                </Grid>

                <!-- Volume Control -->
                <Grid VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="2" Height="90">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="340" Height="90">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button  Grid.Column="1" Style="{StaticResource MusicButton}">
                            <TextBlock Text="&#xf028;" FontSize="20" Foreground="White" FontFamily="/#Font Awesome 6 Pro Solid"/>
                        </Button>
                        <Slider x:Name="VolumeSlider" Width="100" VerticalAlignment="Center" Margin="10" Grid.Column="2"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
